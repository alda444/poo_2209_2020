    String hora, minutos, segundos, ampm; 
    calendar calendario;
    Thread h1;
    

    public reloj() {
        initComponents();
        h1=new Thread(this);
        h1.start();
        
        setLocationRelativeTo(null);
        setTitle("Reloj");
        setVisible(true);
    }

